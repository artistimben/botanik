# Papatya Botanik - Apache .htaccess Yapılandırması

# PHP Ayarları
php_flag display_errors Off
php_flag log_errors On
php_value error_log error_log.txt

# Karakter kodlaması
AddDefaultCharset UTF-8

# Dosya tipi tanımlamaları
AddType text/css .css
AddType application/javascript .js
AddType image/svg+xml .svg

# Gzip Sıkıştırma (Performans için)
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css
    AddOutputFilterByType DEFLATE application/javascript application/json
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# Tarayıcı Önbellekleme
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Resimler - 1 yıl
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    
    # CSS ve JavaScript - 1 ay
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    
    # HTML - 1 saat
    ExpiresByType text/html "access plus 1 hour"
    
    # Fontlar - 1 yıl
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
</IfModule>

# Cache-Control Headers
<IfModule mod_headers.c>
    # CSS ve JS dosyaları için
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "public, max-age=2592000"
    </FilesMatch>
    
    # Resimler için
    <FilesMatch "\.(jpg|jpeg|png|gif|svg|webp)$">
        Header set Cache-Control "public, max-age=31536000"
    </FilesMatch>
</IfModule>

# Güvenlik Ayarları
<IfModule mod_headers.c>
    # XSS Protection
    Header set X-XSS-Protection "1; mode=block"
    
    # Content Type Options
    Header set X-Content-Type-Options "nosniff"
    
    # Frame Options
    Header set X-Frame-Options "SAMEORIGIN"
</IfModule>

# Dosya listelemeyi engelle
Options -Indexes

# Hassas dosyalara erişimi engelle
<FilesMatch "^(config\.php|\.htaccess|error_log\.txt)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# URL Rewrite (Temiz URL'ler için - opsiyonel)
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /botanik/papatyabotabik2/
    
    # HTTPS'e yönlendir (Canlıya alındığında açın)
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # www ekle veya kaldır (tercih edilene göre)
    # RewriteCond %{HTTP_HOST} !^www\.
    # RewriteRule ^(.*)$ https://www.%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# Maksimum upload boyutu (gerekirse PHP.ini'de de ayarlayın)
php_value upload_max_filesize 20M
php_value post_max_size 20M
php_value max_execution_time 300
php_value max_input_time 300

